#!/usr/bin/env bash
# git_statall 1.3.1
# Run status on all git repos

set -euo pipefail  # Fail immediately on any error
Gre='\e[1;32m' Red='\e[1;31m' Mag='\e[1;35m' Yel='\e[1;33m' Blu='\e[1;34m' Rst='\e[0m'

# ==== main
for r in $(ls -1) ; do
    if [[ -d "$r/.git" ]]; then
        (
            printf "%-50s" "$r"
            cd $r
            Branch="$(git branch --show-current)"
            if [[ "$(git status | grep 'working tree clean')" ]]; then
                printf "üëç $Branch\n"
            else
                printf "‚ùå $Branch\n"
            fi
        )
    fi
done
